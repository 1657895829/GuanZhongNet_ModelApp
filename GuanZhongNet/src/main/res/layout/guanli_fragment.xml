<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#FFB516"
        >
        <RadioGroup
            android:id="@+id/rg_top"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            >
            <RadioButton
                android:id="@+id/fb_bm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="我报名的"
                android:textColor="#fc314c"
                android:checked="true"
                android:button="@null"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/tops"
                />
            <RadioButton
                android:id="@+id/fb_fb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="我发布的"
                android:textColor="#fc314c"
                android:button="@null"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/tops"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/sao"
            android:layout_width="50dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:src="@mipmap/aaq"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"  />
            <TextView
                android:text="验票"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/gl_topvp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="11"></android.support.v4.view.ViewPager>

    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/xiaoren_viewpager_weidenglu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"/>

</LinearLayout>
